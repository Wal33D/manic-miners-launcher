{
  "name": "manic-miners-launcher",
  "version": "1.0.0",
  "description": "A dedicated launcher for Manic Miners, an adventurous underground mining game that pays homage to classic resource management and strategy games.",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start -- --no-sandbox",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint .",
    "format": "prettier --write .",
    "update-git-url": "node scripts/updatePackageJson.js",
    "test": "node --require ts-node/register --test test/*.test.ts"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-webpack": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@types/archiver": "^6.0.3",
    "@types/bootstrap": "^5.2.10",
    "@types/jszip": "^3.4.1",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "archiver": "^7.0.1",
    "css-loader": "^7.1.2",
    "electron": "^37.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-prettier": "^5.5.1",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "jsdom": "^26.1.0",
    "jszip": "^3.10.1",
    "mock-require": "^3.0.3",
    "node-loader": "^2.1.0",
    "prettier": "^3.2.5",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "author": "waleed judah",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "bootstrap": "^5.3.3",
    "bootswatch": "^5.3.7",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.1.0",
    "itchio-downloader": "^0.8.1",
    "node-stream-zip": "^1.15.0",
    "os-browserify": "^0.3.0",
    "play-sound": "^1.1.6",
    "windows-shortcuts": "^0.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Wal33D/manic-miners-launcher.git"
  },
  "engines": {
    "node": ">=20.19.2"
  },
  "overrides": {
    "webpack-dev-server": "5.2.2"
  },
  "packageManager": "pnpm@10.12.4",
  "pnpm": {
    "patchedDependencies": {
      "itchio-downloader@0.8.1": "patches/itchio-downloader@0.8.1.patch"
    },
    "ignoredBuiltDependencies": [
      "puppeteer"
    ],
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller"
    ]
  }
}
